<resources>

    <style name="AirwallexDefaultTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorAccent">@color/airwallex_color_accent</item>
        <item name="colorPrimary">@color/airwallex_color_primary</item>
        <item name="colorPrimaryDark">@color/airwallex_color_primary_dark</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:actionMenuTextColor">@color/airwallex_menu_text</item>
        <item name="android:windowBackground">@color/airwallex_color_bg</item>
        <item name="colorControlActivated">@color/airwallex_color_primary</item>
    </style>

    <style name="AirwallexTextInputLayout" parent="Base.Widget.MaterialComponents.TextInputLayout">
        <item name="materialThemeOverlay">@style/AirwallexMaterialThemeOverlay</item>
        <item name="android:background">#00000000</item>
        <item name="boxBackgroundMode">filled</item>
        <item name="boxBackgroundColor">@null</item>
        <item name="boxCollapsedPaddingTop">9dp</item>
        <item name="boxStrokeColor">@color/airwallex_stroke_color</item>
    </style>

    <style name="AirwallexMaterialThemeOverlay">
        <item name="editTextStyle">@style/AirwallexEditTextPadding</item>
    </style>

    <style name="AirwallexEditTextPadding" parent="Base.Widget.MaterialComponents.TextInputEditText">
        <item name="android:paddingTop">26dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="AirwallexProgressBarStyle">
        <item name="colorAccent">@color/airwallex_color_primary</item>
    </style>

    <style name="TransBottomSheetDialogStyle" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="AirwallexPaymentTitle">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/airwallex_color_dark_deep</item>
        <item name="android:fontFamily">@font/circularstd_bold</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="AirwallexPaymentPriceInfo">
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@color/airwallex_color_price</item>
        <item name="android:fontFamily">@font/circularstd_bold</item>
    </style>

    <style name="AirwallexPaymentPriceLabel">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/airwallex_color_price</item>
        <item name="android:fontFamily">@font/circularstd_medium</item>
    </style>

    <style name="AirwallexPaymentButton">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/airwallex_button_text</item>
        <item name="android:fontFamily">@font/circularstd_bold</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/airwallex_button_solid</item>
        <item name="android:layout_height">@dimen/airwallex_button_height</item>
    </style>
</resources>
