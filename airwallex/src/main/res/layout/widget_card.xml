<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.airwallex.android.view.CardNumberTextInputLayout
        android:id="@+id/atlCardNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.airwallex.android.view.AirwallexTextInputLayout
        android:id="@+id/atlCardName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:imeOptions="actionNext"
        android:inputType="text"
        app:hint="@string/airwallex_card_name_hint" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <com.airwallex.android.view.CardExpiryTextInputLayout
            android:id="@+id/atlCardExpiry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:layout_weight="1"
            android:imeOptions="actionNext" />

        <com.airwallex.android.view.CardCvcTextInputLayout
            android:id="@+id/atlCardCvc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_weight="2"
            android:imeOptions="actionDone" />

    </LinearLayout>
</LinearLayout>
