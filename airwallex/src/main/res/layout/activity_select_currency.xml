<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="24dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/circularstd_bold"
        android:text="@string/select_your_currency"
        android:textColor="@color/airwallex_color_dark_deep"
        android:textSize="18sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/circularstd_regular"
        android:text="@string/select_your_currency_title"
        android:textColor="@color/airwallex_color_item_label"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginTop="24dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/width_0"
            android:layout_height="match_parent"
            android:layout_marginEnd="15dp"
            android:layout_weight="1"
            app:cardCornerRadius="6dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:id="@+id/current_card"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/airwallex_card_selector"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/current_currency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/circularstd_regular"
                    android:textColor="@color/airwallex_color_item_label"
                    android:textSize="14sp"
                    tools:text="USD" />

                <TextView
                    android:id="@+id/current_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/circularstd_bold"
                    android:textColor="@color/airwallex_color_dark_deep"
                    android:textSize="18sp"
                    tools:text="$ 100.00" />
            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/width_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:cardCornerRadius="6dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:id="@+id/transfer_card"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/airwallex_card_selector"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/transfer_currency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/circularstd_regular"
                    android:textColor="@color/airwallex_color_item_label"
                    android:textSize="14sp"
                    tools:text="AUD" />

                <TextView
                    android:id="@+id/transfer_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/circularstd_bold"
                    android:textColor="@color/airwallex_color_dark_deep"
                    android:textSize="18sp"
                    tools:text="$ 143.27" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <TextView
        android:id="@+id/rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:drawableStart="@drawable/airwallex_rate"
        android:drawablePadding="8dp"
        tools:text="@string/rate" />

    <TextView
        android:id="@+id/confirm"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/airwallex_button_solid"
        android:fontFamily="@font/circularstd_bold"
        android:gravity="center"
        android:padding="0dp"
        android:text="@string/confirm_payment"
        android:textColor="@android:color/white"
        android:textSize="14sp" />

</LinearLayout>