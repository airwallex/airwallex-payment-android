<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp">

    <TextView
        android:id="@+id/tvTotalPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/circularstd_bold"
        android:textColor="@color/airwallex_color_price"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/tvTotalLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvTotalPrice"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/circularstd_medium"
        android:text="@string/total"
        android:textColor="@color/airwallex_color_price"
        android:textSize="14sp" />

    <RelativeLayout
        android:id="@+id/rlPayNow"
        android:layout_width="match_parent"
        android:layout_height="@dimen/airwallex_button_height"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/airwallex_button_solid"
        android:enabled="false"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:clickable="false"
            android:drawableStart="@drawable/airwallex_ic_lock_selector"
            android:drawablePadding="10dp"
            android:duplicateParentState="true"
            android:focusable="false"
            android:fontFamily="@font/circularstd_bold"
            android:orientation="horizontal"
            android:text="@string/pay_now"
            android:textColor="@color/airwallex_button_text"
            android:textSize="14sp" />
    </RelativeLayout>

    <com.airwallex.android.view.PaymentMethodItemView
        android:id="@+id/paymentMethodItemView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvTotalLabel"
        android:layout_marginTop="40dp" />

</RelativeLayout>
