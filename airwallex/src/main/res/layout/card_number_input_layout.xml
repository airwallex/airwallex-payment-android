<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.textfield.TextInputLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tlInput"
    style="@style/AirwallexTextInputLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.airwallex.android.view.inputs.CardNumberEditText
        android:id="@+id/teInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:digits="@string/airwallex_valid_digits"
        android:drawableEnd="@drawable/airwallex_ic_card_default"
        android:drawablePadding="16dp"
        android:singleLine="true"
        android:textColor="@color/airwallex_color_grey_100"
        android:textColorHint="@color/airwallex_color_grey_50"
        android:textSize="16sp"
        tools:ignore="RtlSymmetry" />
</com.google.android.material.textfield.TextInputLayout>