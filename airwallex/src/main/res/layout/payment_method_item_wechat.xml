<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlWechatPay"
    android:layout_width="match_parent"
    android:layout_height="58dp"
    android:background="@drawable/airwallex_item_bg"
    android:orientation="horizontal"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <ImageView
        android:id="@+id/wechatPayIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:contentDescription="@null"
        android:src="@drawable/airwallex_wechat_pay" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@id/wechatPayIcon"
        android:fontFamily="@font/circularstd_medium"
        android:text="@string/wechat_pay"
        android:textColor="@color/airwallex_color_dark_deep"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/ivChecked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:contentDescription="@null"
        android:src="@drawable/airwallex_tick"
        android:visibility="gone" />
</RelativeLayout>




