<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.airwallex.android.view.inputs.AirwallexTextInputLayout
        android:id="@+id/atlFirstName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:imeOptions="actionNext"
        android:inputType="textCapWords"
        app:hint="@string/airwallex_shipping_first_name_hint" />

    <com.airwallex.android.view.inputs.AirwallexTextInputLayout
        android:id="@+id/atlLastName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:imeOptions="actionNext"
        android:inputType="textCapWords"
        app:hint="@string/airwallex_shipping_last_name_hint" />

    <com.airwallex.android.view.CountryAutoCompleteView
        android:layout_marginTop="16dp"
        android:id="@+id/countryAutocomplete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.airwallex.android.view.inputs.AirwallexTextInputLayout
        android:id="@+id/atlState"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:imeOptions="actionNext"
        android:inputType="textCapWords"
        app:hint="@string/airwallex_shipping_state_name_hint" />

    <com.airwallex.android.view.inputs.AirwallexTextInputLayout
        android:id="@+id/atlCity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:imeOptions="actionNext"
        android:inputType="textCapWords"
        app:hint="@string/airwallex_shipping_city_name_hint" />

    <com.airwallex.android.view.inputs.AirwallexTextInputLayout
        android:id="@+id/atlStreetAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:imeOptions="actionNext"
        android:inputType="textCapWords"
        app:hint="@string/airwallex_shipping_street_hint" />

    <com.airwallex.android.view.inputs.AirwallexTextInputLayout
        android:id="@+id/atlZipCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:imeOptions="actionNext"
        android:inputType="text"
        app:hint="@string/airwallex_shipping_zip_code_hint" />

    <com.airwallex.android.view.inputs.AirwallexTextInputLayout
        android:id="@+id/atlEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:imeOptions="actionNext"
        android:inputType="text"
        app:hint="@string/airwallex_shipping_email_hint" />

    <com.airwallex.android.view.inputs.AirwallexTextInputLayout
        android:id="@+id/atlPhoneNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:imeOptions="actionDone"
        android:inputType="text"
        app:hint="@string/airwallex_contact_phone_number_hint" />
</LinearLayout>