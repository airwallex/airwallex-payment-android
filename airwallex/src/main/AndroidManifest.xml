<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.airwallex.android">

    <application
        android:supportsRtl="true"
        tools:targetApi="n">
        <meta-data
            android:name="com.google.android.gms.wallet.api.enabled"
            android:value="true" />

        <activity
            android:name=".view.PaymentShippingActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/AirwallexDefaultTheme"
            android:windowSoftInputMode="adjustResize" />

        <activity
            android:name=".view.PaymentMethodsActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/AirwallexDefaultTheme" />

        <activity
            android:name=".view.AddPaymentMethodActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/AirwallexDefaultTheme"
            android:windowSoftInputMode="adjustResize" />

        <activity
            android:name=".view.PaymentCheckoutActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/AirwallexDefaultTheme"
            android:windowSoftInputMode="adjustResize" />
    </application>
</manifest>