<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.airwallex.paymentacceptance">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.airwallex.paymentacceptance.SampleApplication"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="AllowBackup,GoogleAppIndexingWarning">
        <activity
            android:name="com.airwallex.paymentacceptance.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.airwallex.paymentacceptance.PaymentCartActivity" />

        <activity android:name="com.airwallex.paymentacceptance.PaymentCheckoutActivity"
            android:theme="@style/ActivityTheme"/>

        <activity
            android:name="com.airwallex.paymentacceptance.PaymentEditShippingActivity"
            android:theme="@style/ActivityTheme" />

        <activity
            android:name="com.airwallex.paymentacceptance.PaymentMethodsActivity"
            android:theme="@style/ActivityTheme" />

        <activity
            android:name="com.airwallex.paymentacceptance.wxapi.WXPayEntryActivity"
            android:exported="true"
            android:launchMode="singleTop" />

        <receiver
            android:name="com.airwallex.paymentacceptance.AppRegister"
            android:permission="com.tencent.mm.plugin.permission.SEND">
            <intent-filter>
                <action android:name="com.tencent.mm.plugin.openapi.Intent.ACTION_REFRESH_WXAPP" />
            </intent-filter>
        </receiver>

    </application>

</manifest>