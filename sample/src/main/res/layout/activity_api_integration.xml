<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/flArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/airwallex_ic_back" />
    </FrameLayout>


    <ImageView
        android:id="@+id/imSetting"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginEnd="12dp"
        android:contentDescription="setting"
        android:src="@drawable/ic_menu"
        app:layout_constraintBottom_toBottomOf="@+id/titleView"
        app:layout_constraintEnd_toEndOf="@+id/titleView"
        app:layout_constraintTop_toTopOf="@+id/titleView" />

    <com.airwallex.paymentacceptance.ui.widget.TitleView
        android:id="@+id/titleView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        app:buttonHeight="40dp"
        app:buttonWidth="40dp"
        app:layout_constraintTop_toBottomOf="@+id/flArrow"
        app:titleText="Integrate with low-level API" />

    <com.airwallex.paymentacceptance.ui.widget.DropdownPickerView
        android:id="@+id/dropdownView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/titleView" />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="180dp"
        android:background="#F6F7F8"
        app:layout_constraintTop_toBottomOf="@+id/dropdownView" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="20dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnPayWithCardDetail"
                style="@style/AppButton"
                android:layout_marginTop="28dp"
                android:text="Pay with card" />

            <Button
                android:id="@+id/btnPayWithCardDetailSaveCard"
                style="@style/AppButton"
                android:layout_marginTop="28dp"
                android:text="Pay with card and save card" />

            <Button
                android:id="@+id/btnPayWithCardDetail3DS"
                style="@style/AppButton"
                android:layout_marginTop="28dp"
                android:text="Pay with card and trigger 3DS" />

            <Button
                android:id="@+id/btnGooglePay"
                style="@style/AppButton"
                android:layout_marginTop="28dp"
                android:text="Pay with Google Pay" />

            <Button
                android:id="@+id/btnGooglePay3DS"
                style="@style/AppButton"
                android:layout_marginTop="28dp"
                android:text="Pay with Google Pay trigger 3ds" />

            <Button
                android:id="@+id/btnRedirect"
                style="@style/AppButton"
                android:layout_marginTop="28dp"
                android:text="Pay by redirection" />

            <Button
                android:id="@+id/btnPaymentMethodsList"
                style="@style/AppButton"
                android:layout_marginTop="28dp"
                android:text="Get payment methods" />

            <Button
                android:id="@+id/btnPaymentConsentsList"
                style="@style/AppButton"
                android:layout_marginTop="28dp"
                android:text="Get saved cards methods" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
