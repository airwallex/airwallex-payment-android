<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/radioPayment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/radio_button_color"
            android:text="One-off Payment" />

        <RadioButton
            android:id="@+id/radioRecurring"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/radio_button_color"
            android:text="Recurring" />

        <RadioButton
            android:id="@+id/radioRecurringAndPayment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/radio_button_color"
            android:text="Recurring and Payment" />
    </RadioGroup>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnPayWithCardDetail"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_shape"
                android:text="pay with card detail"
                android:textColor="@color/color_primary" />

            <Button
                android:id="@+id/btnPayWithCardDetailSaveCard"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:background="@drawable/btn_shape"
                android:text="pay with card detail and save"
                android:textColor="@color/color_primary" />

            <Button
                android:id="@+id/btnPayWithCardDetail3DS"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:background="@drawable/btn_shape"
                android:text="pay with card detail trigger 3ds"
                android:textColor="@color/color_primary" />

            <Button
                android:id="@+id/btnGooglePay"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:background="@drawable/btn_shape"
                android:text="google pay"
                android:textColor="@color/color_primary" />

            <Button
                android:id="@+id/btnPaymentMethodsList"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:background="@drawable/btn_shape"
                android:text="get payment methods"
                android:textColor="@color/color_primary" />

            <Button
                android:id="@+id/btnPaymentConsentsList"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:background="@drawable/btn_shape"
                android:text="get saved cards"
                android:textColor="@color/color_primary" />
        </LinearLayout>
    </ScrollView>


</LinearLayout>
