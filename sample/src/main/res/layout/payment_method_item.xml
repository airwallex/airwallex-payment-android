<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llPaymentMethod"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="58dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            android:id="@+id/tvPaymentLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:fontFamily="@font/circularstd_medium"
            android:text="@string/payment"
            android:textColor="#54545E"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvPaymentMethod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/tvPaymentLabel"
            android:drawableEnd="@drawable/right_arrow"
            android:drawablePadding="10dp"
            android:fontFamily="@font/circularstd_medium"
            android:gravity="end"
            android:textColor="@color/airwallex_dark_gray"
            android:textSize="14sp" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/llCardCvc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        tools:ignore="RtlHardcoded">

        <EditText
            android:id="@+id/etCardCvc"
            android:layout_width="88dp"
            android:layout_height="32dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/bg_input_layout_border"
            android:fontFamily="@font/circularstd_medium"
            android:hint="@string/cvc_hint"
            android:paddingLeft="5dp"
            android:textColor="@color/color_edit_text_default"
            android:textColorHint="@color/color_edit_text_accent"
            android:textSize="13sp"
            tools:ignore="RtlSymmetry" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:layout_marginEnd="15dp"
            android:contentDescription="@null"
            android:src="@drawable/cvv"
            tools:ignore="RtlHardcoded" />
    </LinearLayout>

    <include layout="@layout/line_divider" />
</LinearLayout>
