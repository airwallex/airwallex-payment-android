<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="20dp">

    <FrameLayout
        android:id="@+id/flArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/airwallex_ic_back" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/titleContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp">

        <com.airwallex.paymentacceptance.ui.widget.TitleView
            android:id="@+id/titleView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:buttonHeight="40dp"
            app:buttonWidth="40dp"
            app:titleText="Integrate with Airwallex UI" />

        <ImageView
            android:id="@+id/imSetting"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginEnd="28dp"
            android:layout_gravity="end|center_vertical"
            android:contentDescription="setting"
            android:src="@drawable/ic_menu" />
    </FrameLayout>

    <com.airwallex.paymentacceptance.ui.widget.DropdownPickerView
        android:id="@+id/dropdownView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="20dp" />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="180dp"
        android:background="#F6F7F8" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvContent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
</LinearLayout>