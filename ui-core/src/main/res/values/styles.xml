<resources>

    <style name="AirwallexTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/airwallex_text_input_layout_stroke_color</item>
        <item name="boxStrokeWidthFocused">@dimen/airwallex_input_layout_border_width_focused</item>
        <item name="boxStrokeWidth">@dimen/airwallex_input_layout_border_width_default</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="errorTextColor">@color/airwallex_color_red</item>
        <item name="hintTextColor">@color/airwallex_text_input_hint_color</item>
        <item name="boxStrokeErrorColor">@color/airwallex_color_red</item>
        <item name="errorIconDrawable">@null</item>
    </style>

    <style name="AirwallexDefaultTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorAccent">@color/airwallex_tint_color</item>
        <item name="colorPrimary">@color/airwallex_tint_color</item>
        <item name="colorPrimaryDark">@color/airwallex_color_white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:actionMenuTextColor">@color/airwallex_menu_text</item>
        <item name="android:windowBackground">@color/airwallex_color_white</item>
        <item name="colorControlActivated">@color/airwallex_tint_color</item>
    </style>

    <style name="AirwallexTransparentTheme" parent="@style/Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="AirwallexProgressBarStyle">
        <item name="colorAccent">@color/airwallex_tint_color</item>
    </style>

    <style name="AirwallexPaymentButton">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/airwallex_button_text</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/airwallex_button_solid</item>
        <item name="android:layout_height">@dimen/airwallex_button_height</item>
    </style>

    <style name="AirwallexPaymentHeader">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/airwallex_color_grey_100</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AirwallexPaymentBodyGrey50">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/airwallex_color_grey_50</item>
    </style>
</resources>
