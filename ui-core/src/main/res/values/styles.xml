<resources>

    <style name="AirwallexDefaultTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorAccent">@color/airwallex_tint_color</item>
        <item name="colorPrimary">@color/airwallex_tint_color</item>
        <item name="colorPrimaryDark">@color/airwallex_color_white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:actionMenuTextColor">@color/airwallex_menu_text</item>
        <item name="android:windowBackground">@color/airwallex_color_white</item>
        <item name="colorControlActivated">@color/airwallex_tint_color</item>
    </style>

    <style name="AirwallexProgressBarStyle">
        <item name="colorAccent">@color/airwallex_tint_color</item>
    </style>

    <style name="AirwallexPaymentButton">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/airwallex_button_text</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/airwallex_button_solid</item>
        <item name="android:layout_height">@dimen/airwallex_button_height</item>
    </style>
</resources>
